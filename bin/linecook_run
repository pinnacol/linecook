#! /bin/sh
############################################################################

ssh_config_file=${SSH_CONFIG_FILE:-config/ssh}
remote_dir=${REMOTE_DIR:-pkg}

usage="usage: %s [-F SSH_CONFIG_FILE] [-D REMOTE_DIR] [-h] PACKAGE_DIRS...\n"
option="       %s   %s\n"
while getopts "F:D:h" opt
do
  case $opt in
  F  )  ssh_config_file=$OPTARG ;;
  D  )  remote_dir=$OPTARG ;;
  h  )  printf "$usage" $0
        printf "$option" "-F" "the ssh config file"
        printf "$option" "-D" "the remote package dir"
        printf "$option" "-h" "prints this help"
        exit 0 ;;
  \? )  printf "$usage" $0
        exit 2 ;;
  esac
done
shift $(($OPTIND - 1))

################################### run ####################################

while read script_name args
do

for package_dir in "$@"
do
host=$(basename -- "$package_dir")

ssh -q -T -F "$ssh_config_file" "$host" -- <<SCRIPT
cd "$remote_dir"
if ! [ -f "$script_name" ]
then exit 1
fi

"." "./$script_name" $args
SCRIPT

status=$?
if [ $status -ne 0 ]
then
  echo "[$status] $remote_dir/$script_name $args" >&2
  exit 1
fi

done
done

################################## (run) ###################################
